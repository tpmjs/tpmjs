{
  "name": "@tpmjs/tools-openapi-snippet-build",
  "version": "0.1.0",
  "description": "Builds code snippets from OpenAPI operation definitions",
  "type": "module",
  "keywords": ["tpmjs", "engineering", "ai", "openapi", "code-generation", "api"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@tpmjs/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/tpmjs.git",
    "directory": "packages/tools/official/openapi-snippet-build"
  },
  "homepage": "https://tpmjs.com",
  "license": "MIT",
  "tpmjs": {
    "category": "engineering",
    "frameworks": ["vercel-ai"],
    "tools": [
      {
        "name": "openapiSnippetBuildTool",
        "description": "Builds code snippets from OpenAPI operation definitions",
        "parameters": [
          {
            "name": "operation",
            "type": "object",
            "description": "OpenAPI operation with method, path, and parameters",
            "required": true
          },
          {
            "name": "language",
            "type": "string",
            "description": "Target language (javascript, python, curl, etc.)",
            "required": true
          }
        ],
        "returns": {
          "type": "OpenapiSnippetResult",
          "description": "Object with generated code snippet, language, and imports"
        }
      }
    ]
  },
  "dependencies": {
    "ai": "6.0.0-beta.124"
  }
}
