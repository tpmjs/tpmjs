{
  "name": "@tpmjs/tools-pivot",
  "version": "0.2.0",
  "description": "Pivot array data from row format to column format (row-to-column transformation)",
  "type": "module",
  "keywords": [
    "tpmjs",
    "data",
    "pivot",
    "transform",
    "reshape"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@tpmjs/tsconfig": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/tpmjs.git",
    "directory": "packages/tools/official/pivot"
  },
  "homepage": "https://tpmjs.com",
  "license": "MIT",
  "tpmjs": {
    "category": "data",
    "frameworks": [
      "vercel-ai"
    ],
    "tools": [
      {
        "name": "pivotTool",
        "description": "Pivot array data from row format to column format (row-to-column transformation)",
        "parameters": [
          {
            "name": "rows",
            "type": "array",
            "description": "Array of objects to pivot",
            "required": true
          },
          {
            "name": "rowKey",
            "type": "string",
            "description": "Field to use as row identifier",
            "required": true
          },
          {
            "name": "columnKey",
            "type": "string",
            "description": "Field to use as column names",
            "required": true
          },
          {
            "name": "valueKey",
            "type": "string",
            "description": "Field to use as cell values",
            "required": true
          }
        ],
        "returns": {
          "type": "PivotResult",
          "description": "Object with pivoted data, columns array, and rowCount"
        }
      }
    ]
  },
  "dependencies": {
    "ai": "6.0.23"
  }
}
