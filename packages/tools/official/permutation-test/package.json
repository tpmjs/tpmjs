{
  "name": "@tpmjs/tools-permutation-test",
  "version": "0.2.0",
  "description": "Perform permutation test for difference in means between two groups",
  "type": "module",
  "keywords": ["tpmjs", "statistics", "ai", "permutation-test", "hypothesis-testing"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@tpmjs/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/tpmjs.git",
    "directory": "packages/tools/official/permutation-test"
  },
  "homepage": "https://tpmjs.com",
  "license": "MIT",
  "tpmjs": {
    "category": "statistics",
    "frameworks": ["vercel-ai"],
    "tools": [
      {
        "name": "permutationTestTool",
        "description": "Perform permutation test for difference in means between two groups",
        "parameters": [
          {
            "name": "group1",
            "type": "number[]",
            "description": "First group of numeric values",
            "required": true
          },
          {
            "name": "group2",
            "type": "number[]",
            "description": "Second group of numeric values",
            "required": true
          },
          {
            "name": "iterations",
            "type": "number",
            "description": "Number of permutations (default: 10000)",
            "required": false
          }
        ],
        "returns": {
          "type": "PermutationTestResult",
          "description": "Object with pValue, observedDiff, significant status, and metadata"
        }
      }
    ]
  },
  "dependencies": {
    "ai": "6.0.0-beta.124"
  }
}
