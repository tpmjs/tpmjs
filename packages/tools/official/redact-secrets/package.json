{
  "name": "@tpmjs/tools-redact-secrets",
  "version": "0.2.0",
  "description": "Redact detected secrets from text",
  "type": "module",
  "keywords": [
    "tpmjs",
    "security",
    "secrets",
    "redaction",
    "sanitization"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@tpmjs/tsconfig": "workspace:*",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/tpmjs.git",
    "directory": "packages/tools/official/redact-secrets"
  },
  "homepage": "https://tpmjs.com",
  "license": "MIT",
  "tpmjs": {
    "category": "security",
    "frameworks": [
      "vercel-ai"
    ],
    "tools": [
      {
        "name": "redactSecrets",
        "description": "Redact detected secrets from text by replacing them with [REDACTED:type] placeholders. Optionally specify custom patterns to redact",
        "parameters": [
          {
            "name": "text",
            "type": "string",
            "description": "The text to redact secrets from",
            "required": true
          },
          {
            "name": "customPatterns",
            "type": "array",
            "description": "Optional array of custom regex patterns to redact (as strings)",
            "required": false
          }
        ],
        "returns": {
          "type": "RedactionResult",
          "description": "Object with redacted text, redactionCount, and redactions array"
        }
      }
    ]
  },
  "dependencies": {
    "ai": "6.0.23"
  }
}
