{
  "name": "@tpmjs/tools-guardrail-policy-draft",
  "version": "0.2.0",
  "description": "Drafts guardrail policies for agent workflows with rules, severity levels, and enforcement actions",
  "type": "module",
  "keywords": ["tpmjs", "agent", "ai", "safety", "guardrails"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@tpmjs/tsconfig": "workspace:*",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anthropics/tpmjs.git",
    "directory": "packages/tools/official/guardrail-policy-draft"
  },
  "homepage": "https://tpmjs.com",
  "license": "MIT",
  "tpmjs": {
    "category": "agent",
    "frameworks": ["vercel-ai"],
    "tools": [
      {
        "name": "guardrailPolicyDraftTool",
        "description": "Drafts guardrail policies for agent workflows with rules and enforcement",
        "parameters": [
          {
            "name": "policies",
            "type": "array",
            "description": "Array of policy rules with rule text, severity, and action",
            "required": true
          }
        ],
        "returns": {
          "type": "GuardrailPolicyDraft",
          "description": "Formatted policy document with rules, summary, and metadata"
        }
      }
    ]
  },
  "dependencies": {
    "ai": "6.0.0-beta.124"
  }
}
